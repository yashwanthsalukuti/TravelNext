<% layout("./layouts/boilerplate")%>
<div class="row">
  <br />
  <div class="col-6 offset-3">
    <br />
    <h2>Sign Up for <span style="color: purple">TravelNext</span></h2>
    <br />
    <form method="post" action="/signup" novalidate class="needs-validation">
      <div class="mb-3">
        <lable for="title" class="form-label"> username </lable>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <lable for="title" class="form-label"> email </lable>
        <input
          type="text"
          name="email"
          id="email"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <lable for="title" class="form-label"> Password </lable>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <br />
      <button class="btn btn-add">Sign Up</button>
      <br /><br />
    </form>
  </div>
</div>
